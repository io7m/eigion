<?xml version="1.0" encoding="utf-8"?>

<!DOCTYPE suppressions PUBLIC
  "-//Checkstyle//DTD SuppressionFilter Configuration 1.0//EN"
  "https://checkstyle.org/dtds/suppressions_1_0.dtd">

<suppressions>
  <!-- Secondary record constructors require parameter name shadowing. -->
  <suppress files="EIStorageName\.java"
            checks="HiddenField"/>

  <suppress files="EILoggingHTTPRequestLayout\.java"
            checks="JavadocVariable"/>

  <!-- Secondary record constructors require parameter name shadowing. -->
  <suppress files="EIAuditEvent\.java"
            checks="HiddenField"/>

  <suppress files="EISCommandVersion\.java"
            checks="IllegalInstantiation"/>
  <suppress files="EIPSCommandVersion\.java"
            checks="IllegalInstantiation"/>

  <!-- Without pattern matching... -->
  <suppress files="EIACommandExecutor\.java"
            checks="NPathComplexity"/>
  <suppress files="EIACommandExecutor\.java"
            checks="CyclomaticComplexity"/>
  <suppress files="EIPCommandExecutor\.java"
            checks="NPathComplexity"/>
  <suppress files="EIPCommandExecutor\.java"
            checks="CyclomaticComplexity"/>
  <suppress files="EISecPolicyDefault\.java"
            checks="NPathComplexity"/>

  <!-- Bytes to strings -->
  <suppress files="EIDomainCheck\.java"
            checks="IllegalInstantiation"/>

  <!-- MXBeans have specific name conventions. -->
  <suppress files="EIServerDatabaseMetricsMXBean\.java"
            checks="TypeName"/>
</suppressions>
